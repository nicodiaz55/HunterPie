<UserControl x:Name="ColorPickerControl" x:Class="HunterPie.GUIControls.Custom_Controls.ColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HunterPie.GUIControls.Custom_Controls"
             mc:Ignorable="d" 
             Width="223" Height="30"
             MouseDown="OnMouseDown" Cursor="Hand">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Path=NameText, ElementName=ColorPickerControl}" VerticalAlignment="Top" Height="24" Width="111" Foreground="#FFF4F4F5" FontFamily="Roboto" Margin="0,2,112,0" FontSize="14" FontWeight="Light" TextAlignment="Right" Padding="0,4,4,0"/>
        <Ellipse x:Name="ColorCircle" Fill="White" Height="24" VerticalAlignment="Top" Margin="0,3,87,0" HorizontalAlignment="Right" Width="24"/>
        <TextBlock x:Name="ColorHex" HorizontalAlignment="Right" Margin="0,6,3,0" TextWrapping="Wrap" Text="#FFFFFFFF" VerticalAlignment="Top" Height="17" Foreground="#FFF4F4F5" FontFamily="Roboto"/>
    </Grid>
</UserControl>
